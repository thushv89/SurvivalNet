function out = dXX(nn, i)
    J = nn.n - 1;
    out = cell(J, 1);
    
    out{J} = eye(size(nn.a{J},2));
    
    for j = (J - 1):-1:1
        
        out{j} = out{j+1} * B;
    end
    
    if (l1 == l2 - 1)
        for d = 2: size(X, 2)
            tmp(d) = nn.W{l1}(d, q - 1) * dSigm(nn.a{l1}(i, :) * nn.W{l1}(:, q - 1));
        end
    else
        for d = 2: size(X, 2)
            tmp3 =  dXX(nn, i, l1 + 1, l1, q);
            for m = 1: size(nn.a{l1 + 1})
                tmp2 = dXX(nn, i, l2, l1 + 1, m);
 
                tmp(d) = tmp(d) + tmp2(d, :) * ...
                           tmp3 (m, :);
            end
        end
    end
end

function B = dXXadj(nn, l1)
    [m] = size(nn.a{l1}, 1);
    for i = 1:m
        B = bsxfun(@times, nn.W{l1}, dSigm(nn.a{l1}(i, :) * nn.W{l1}));
    
end